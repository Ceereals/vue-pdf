{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2024"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["node"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "../vite.config.ts",
    "src/node/**/*.ts",
    "src/plugins/vite-clean.plugin.ts"
  ]
}
